<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ebis.MAUI.View.BadElementPage"
             xmlns:vm="clr-namespace:ebis.MAUI.BadElement"
             x:DataType="vm:BadElementViewModel"
             Title="Durée de fontionnement moyen d'un élément">

    <StackLayout>
        <ListView ItemsSource="{Binding Resultats}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}" />
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Button Text="Menu" Clicked="OnPage5ButtonClicked" BackgroundColor="#2196F3" TextColor="White" Margin="0,0,10,0" />
            <Button Text="Top 5 Défectueux" Clicked="OnPage6ButtonClicked" BackgroundColor="#2196F3" TextColor="White" Margin="10,0,10,0" />
            <Button Text="Top 5 Fiables" Clicked="OnPage7ButtonClicked" BackgroundColor="#2196F3" TextColor="White" Margin="10,0,0,0" />
        </StackLayout>
    </StackLayout>

</ContentPage>